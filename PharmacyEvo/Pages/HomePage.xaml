<Page x:Class="PharmacyEvo.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PharmacyEvo"
      mc:Ignorable="d"
      Title="Аптека Эво">
    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFF6F8FF" Offset="0"/>
                <GradientStop Color="#FFF7F7F7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2" Margin="22,18,22,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Корзина"
                        Height="36"
                        MinWidth="120"
                        Margin="0,0,10,0"
                        Padding="14,6"
                        Background="#FF10B981"
                        Foreground="White"
                        BorderThickness="0"
                        Click="CartButton_Click" />
                <Button Content="Профиль"
                        Height="36"
                        MinWidth="120"
                        Padding="14,6"
                        Background="#FFF3F6FF"
                        BorderBrush="#FFD6E4FF"
                        Foreground="#FF173A7A"
                        Click="ProfileButton_Click" />
            </StackPanel>
        </Grid>

        <Border Grid.Row="1" Grid.Column="0"
                Margin="22,12,12,22"
                CornerRadius="14"
                Background="White"
                BorderBrush="#FFE6E6E6"
                BorderThickness="1"
                Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

               
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Аптека Эво"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="#FF173A7A" />
                    
                </StackPanel>

                <Border Grid.Row="1" Height="1" Background="#FFF0F0F0" Margin="0,16,0,16"/>

                
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,14,0">
                        <TextBlock Text="Поиск" Foreground="#FF555555" Margin="0,0,0,6"/>
                        <TextBox Name="SearchTextBox"
                                 Height="36"
                                 Padding="12,6"
                                 VerticalContentAlignment="Center"
                                 BorderBrush="#FFE2E8F0"
                                 Background="#FFFDFDFF"
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,14,0">
                        <TextBlock Text="Сортировка" Foreground="#FF555555" Margin="0,0,0,6"/>
                        <ComboBox Name="SortComboBox"
                                  Height="36" 
                                  MinWidth="170" 
                                  SelectedIndex="0"
                                  SelectionChanged="SortComboBox_SelectionChanged">
                            <ComboBoxItem Content="По названию (A→Я)"/>
                            <ComboBoxItem Content="По названию (Я→A)"/>
                            <ComboBoxItem Content="По цене (дешевле)"/>
                            <ComboBoxItem Content="По цене (дороже)"/>
                        </ComboBox>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,14,0">
                        <TextBlock Text="Категория" Foreground="#FF555555" Margin="0,0,0,6"/>
                        <ComboBox Name="CategoryFilterComboBox"
                                  Height="36"
                                  MinWidth="170"
                                  DisplayMemberPath="CategoryName"
                                  SelectedValuePath="CategoryId"
                                  SelectionChanged="CategoryFilterComboBox_SelectionChanged"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                        <Button Height="36"
                                MinWidth="120"
                                Content="Сбросить"
                                Background="#FFF3F4F6"
                                BorderBrush="#FFE5E7EB"
                                Foreground="#FF111827"
                                Click="ResetFiltersButton_Click"/>
                    </StackPanel>
                </Grid>

                <ScrollViewer Grid.Row="3"
                              Margin="0,16,0,0"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl Name="MedicinesItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="200"
                                        Height="280"
                                        Margin="0,0,12,12"
                                        Background="White"
                                        BorderBrush="#FFE6E6E6"
                                        BorderThickness="1"
                                        CornerRadius="8"
                                        Padding="12">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="120"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Border Grid.Row="0"
                                                Background="#FFF9FAFB"
                                                BorderBrush="#FFE2E8F0"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Margin="0,0,0,8">
                                            <Image Source="{Binding ImageSource}"
                                                   Stretch="Uniform"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                        </Border>
                                        
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#FF111827"
                                                   TextWrapping="Wrap"
                                                   Margin="0,0,0,6"/>
                                        
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding PriceText}"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="#FF10B981"
                                                   Margin="0,0,0,8"/>
                                        
                                        <Button Grid.Row="3"
                                                Content="В корзину"
                                                Height="32"
                                                Background="#FF10B981"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Click="AddToCartButton_Click"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        
        <Border Grid.Row="1" Grid.Column="1"
                Margin="0,12,22,22"
                CornerRadius="14"
                Background="White"
                BorderBrush="#FFE6E6E6"
                BorderThickness="1"
                Padding="16"
                Visibility="{Binding IsManeger, Converter={StaticResource BoolToVisibility}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Меню"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#FF111827"
                           Margin="0,0,0,12"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Button Content="Роли" Height="36" Margin="0,0,0,8" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}}" Click="RolesButton_Click"/>
                        <Button Content="Клиенты" Height="36" Margin="0,0,0,8" Click="ClientsButton_Click"/>
                        <Button Content="Сотрудники" Height="36" Margin="0,0,0,8" Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibility}}" Click="EmployeesButton_Click"/>
                        <Button Content="Поставщики" Height="36" Margin="0,0,0,8" Click="SuppliersButton_Click"/>
                        <Button Content="Производители" Height="36" Margin="0,0,0,8" Click="ManufacturersButton_Click"/>
                        <Button Content="Страны" Height="36" Margin="0,0,0,8" Click="CountriesButton_Click"/>
                        <Button Content="Категории" Height="36" Margin="0,0,0,8" Click="CategoriesButton_Click"/>
                        <Button Content="Лекарства" Height="36" Margin="0,0,0,8" Click="MedicinesButton_Click"/>
                        <Button Content="Партии лекарств" Height="36" Margin="0,0,0,8" Click="MedicineBatchesButton_Click"/>
                        <Button Content="Поставки" Height="36" Margin="0,0,0,8" Click="SuppliesButton_Click"/>
                        <Button Content="Заказы" Height="36" Margin="0,0,0,8" Click="OrdersButton_Click"/>
                    </StackPanel>
                </ScrollViewer>

                <StackPanel Grid.Row="2" Margin="0,12,0,0">
                    <Border Height="1" Background="#FFF0F0F0" Margin="0,0,0,12"/>
                    <Button Content="Выход"
                            Height="36"
                            Background="#FFF3F4F6"
                            BorderBrush="#FFE5E7EB"
                            Foreground="#FF111827" Click="Button_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>


