<Page x:Class="PharmacyEvo.Pages.Auth.EmployeeLoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Вход для сотрудников">

    <Grid Background="#FFF7F7F7">
        <Button Content="Назад"
                Height="34"
                MinWidth="110"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="18,18,0,0"
                Padding="12,5"
                Background="#FFF3F4F6"
                BorderBrush="#FFE5E7EB"
                Foreground="#FF111827"
                Click="BackButton_Click"/>

        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Padding="28"
                CornerRadius="12"
                BorderBrush="#FFE6E6E6"
                BorderThickness="1"
                MaxWidth="440">
            <StackPanel>
                <TextBlock Text="Вход для сотрудников"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6" />
                <TextBlock Text="Только для персонала"
                           Foreground="#FF6B7280"
                           Margin="0,0,0,16"/>

                <TextBlock Text="Логин / Email" Margin="0,0,0,6" Foreground="#FF555555"/>
                <TextBox Height="34"
                         Text="{Binding AuthModel.LoginOrEmail, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,12"
                         Padding="10,6"
                         VerticalContentAlignment="Center" />

                <TextBlock Text="Пароль" Margin="0,0,0,6" Foreground="#FF555555"/>
                <TextBox Height="34"
                         Text="{Binding AuthModel.Password, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,18"
                         Padding="10,6"
                         VerticalContentAlignment="Center" />

                <Button Content="Войти"
                        Height="38"
                        Margin="0,0,0,12"
                        Background="#FF2D6CDF"
                        Foreground="White"
                        BorderThickness="0"
                        Click="Button_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Page>


