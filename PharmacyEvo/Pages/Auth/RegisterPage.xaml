<Page x:Class="PharmacyEvo.Pages.Auth.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Регистрация">

    <Grid Background="#FFF7F7F7">
        <Border HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="White"
                Padding="28"
                CornerRadius="12"
                BorderBrush="#FFE6E6E6"
                BorderThickness="1"
                MaxWidth="420">
            <StackPanel>
                <TextBlock Text="Регистрация"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Margin="0,0,0,16" />

                <TextBlock Text="Имя" Margin="0,0,0,6" Foreground="#FF555555"/>
                <TextBox Height="34"
                         Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,12"
                         Padding="10,6"
                         VerticalContentAlignment="Center" />

                <TextBlock Text="Email" Margin="0,0,0,6" Foreground="#FF555555"/>
                <TextBox Height="34"
                         Text="{Binding Model.Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,12"
                         Padding="10,6"
                         VerticalContentAlignment="Center" />

                <TextBlock Text="Пароль" Margin="0,0,0,6" Foreground="#FF555555"/>
                <TextBox Height="34"
                         Text="{Binding Model.Password, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,12"
                         Padding="10,6"
                         VerticalContentAlignment="Center" />

                <TextBlock Text="Повтор пароля" Margin="0,0,0,6" Foreground="#FF555555"/>
                <TextBox Height="34"
                         Text="{Binding Model.ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,0,0,18"
                         Padding="10,6"
                         VerticalContentAlignment="Center" />

                <Button Content="Зарегистрироваться"
                        Height="38"
                        Margin="0,0,0,10"
                        Background="#FF2D6CDF"
                        Foreground="White"
                        BorderThickness="0" Click="Button_Click" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Уже есть аккаунт? " Foreground="#FF666666"/>
                    <TextBlock Foreground="#FF2D6CDF" TextDecorations="Underline"
           Cursor="Hand"
           MouseLeftButtonDown="TextBlockLogin_Click">
    <Run Text="Войти"/>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>


