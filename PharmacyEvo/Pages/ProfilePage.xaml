<Page x:Class="PharmacyEvo.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"

      Title="Профиль">

    <Grid>
        <Grid.Resources>
            <Style x:Key="FieldLabelStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="#FF6B7280"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Margin" Value="0,0,0,2"/>
            </Style>

            <Style x:Key="FieldValueStyle" TargetType="{x:Type TextBlock}">
                <Setter Property="Foreground" Value="#FF111827"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="EditButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Height" Value="32"/>
                <Setter Property="MinWidth" Value="110"/>
                <Setter Property="Padding" Value="12,5"/>
                <Setter Property="Background" Value="#FFF3F6FF"/>
                <Setter Property="BorderBrush" Value="#FFD6E4FF"/>
                <Setter Property="Foreground" Value="#FF173A7A"/>
            </Style>
        </Grid.Resources>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFF6F8FF" Offset="0"/>
                <GradientStop Color="#FFF7F7F7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Margin="22,18,22,22"
                CornerRadius="14"
                Background="White"
                BorderBrush="#FFE6E6E6"
                BorderThickness="1"
                Padding="18">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

              
                <Button Content="Назад"
                        Height="34"
                        MinWidth="110"
                        HorizontalAlignment="Left"
                        Padding="12,5"
                        Background="#FFF3F4F6"
                        BorderBrush="#FFE5E7EB"
                        Foreground="#FF111827"
                        Click="BackButton_Click" />

                <!-- Header -->
                <Grid Grid.Row="1" Margin="0,14,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Width="52"
                            Height="52"
                            CornerRadius="26"
                            Background="#FFF3F6FF"
                            BorderBrush="#FFD6E4FF"
                            BorderThickness="1"
                            VerticalAlignment="Center">
                        <TextBlock Text="П"
                                   Foreground="#FF173A7A"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Профиль"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Foreground="#FF173A7A"/>
                        <TextBlock Text="{Binding CurrentUser.FullName}"
                                   Margin="0,6,0,0"
                                   FontSize="14"
                                   Foreground="#FF6B7280"/>
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <StackPanel Grid.Row="2" Margin="0,18,0,0">
                    <!-- Row: ID -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="ID"/>
                                <TextBlock Style="{StaticResource FieldValueStyle}" Text="{Binding CurrentUser.UserId}"/>
                            </StackPanel>
                            
                        </Grid>
                    </Border>

                    <!-- Row: FullName -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="ФИО"/>
                                <TextBlock Style="{StaticResource FieldValueStyle}" Text="{Binding CurrentUser.FullName}"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Style="{StaticResource EditButtonStyle}"
                                    Content="Изменить"
                                    Tag="FullName"
                                    Click="EditField_Click"/>
                        </Grid>
                    </Border>

                    <!-- Row: Email -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Email"/>
                                <TextBlock Style="{StaticResource FieldValueStyle}" Text="{Binding CurrentUser.Email}"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Style="{StaticResource EditButtonStyle}"
                                    Content="Изменить"
                                    Tag="Email"
                                    Click="EditField_Click"/>
                        </Grid>
                    </Border>

                    <!-- Row: Phone -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Телефон"/>
                                <TextBlock Style="{StaticResource FieldValueStyle}" Text="{Binding CurrentUser.Phone}"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Style="{StaticResource EditButtonStyle}"
                                    Content="Изменить"
                                    Tag="Phone"
                                    Click="EditField_Click"/>
                        </Grid>
                    </Border>

                    <!-- Row: Password -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Пароль"/>
                                <TextBlock Style="{StaticResource FieldValueStyle}"
                                           Text="••••••••"
                                           ToolTip="{Binding CurrentUser.Password}"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Style="{StaticResource EditButtonStyle}"
                                    Content="Изменить"
                                    Tag="Password"
                                    Click="EditField_Click"/>
                        </Grid>
                    </Border>

                    <!-- Row: DateCreated -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Дата регистрации"/>
                                <TextBlock Style="{StaticResource FieldValueStyle}"
                                           Text="{Binding CurrentUser.DateCreated, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Orders Section -->
                    <Border Background="#FFFAFAFB"
                            BorderBrush="#FFF0F0F0"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="14"
                            Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Мои заказы"
                                       Style="{StaticResource FieldLabelStyle}"
                                       Margin="0,0,0,12"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#FF173A7A"/>
                            
                            <ListBox Name="OrdersListBox"
                                     ItemsSource="{Binding Orders}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     MaxHeight="300"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                BorderBrush="#FFE6E6E6"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Padding="12"
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding OrderId, StringFormat='Заказ №{0}'}"
                                                               FontSize="14"
                                                               FontWeight="SemiBold"
                                                               Foreground="#FF173A7A"
                                                               Margin="0,0,0,4"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat='Дата: {0:dd.MM.yyyy HH:mm}'}"
                                                               FontSize="12"
                                                               Foreground="#FF6B7280"/>
                                                </StackPanel>
                                                <Button Grid.Column="1"
                                                        Content="Подробнее"
                                                        Style="{StaticResource EditButtonStyle}"
                                                        Margin="12,0,0,0"
                                                        Click="OrderDetails_Click"
                                                        Tag="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <TextBlock Name="NoOrdersTextBlock"
                                       Text="У вас пока нет заказов"
                                       Foreground="#FF6B7280"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"
                                       Visibility="Collapsed"/>
                        </StackPanel>
                    </Border>

                    
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>


